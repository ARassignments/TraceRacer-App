<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sing_up_Activity2"

    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sing_up_Activity2"
        android:orientation="vertical"
        android:padding="15dp"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:paddingTop="15dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#15898E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your credentials to continue"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#555555"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="40dp"
            android:textSize="14sp"
            android:textColor="#222222"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:hint="Enter Your Name"
            android:textColorHint="#A9A9A9"
            android:textSize="12sp"
            android:padding="15dp"
            android:drawablePadding="8dp"
            android:drawableTint="#A9A9A9"
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#222222"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:hint="Enter Username"
            android:textColorHint="#A9A9A9"
            android:textSize="12sp"
            android:padding="15dp"
            android:drawablePadding="8dp"
            android:drawableTint="#A9A9A9"
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:textColor="#222222"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:hint="Enter E-mail"
            android:textColorHint="#A9A9A9"
            android:textSize="12sp"
            android:padding="15dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="8dp"
            android:drawableTint="#A9A9A9"
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="#222222"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:hint="Enter New  Password"
            android:textColorHint="#A9A9A9"
            android:textSize="12sp"
            android:padding="15dp"
            android:drawableLeft="@drawable/lock"
            android:drawableRight="@drawable/eye"
            android:drawablePadding="8dp"
            android:drawableTint="#A9A9A9"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="#222222"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:hint="Confirm Password"
            android:textColorHint="#A9A9A9"
            android:textSize="12sp"
            android:padding="15dp"
            android:drawableLeft="@drawable/lock"
            android:drawableRight="@drawable/eye"
            android:drawablePadding="8dp"
            android:drawableTint="#A9A9A9"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/forgotBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="By continuing you agree to our Terms of Service
and Privacy Policy."
            android:textColor="#181725"
            android:textSize="14sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="33dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#12858A"
            android:padding="16dp"
            android:text="Sign-Up"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rstlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Login"
                android:textColor="#1A959A"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

</ScrollView>